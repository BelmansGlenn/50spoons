{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block importCss %}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}
{% block body %}
<section class="contact">
    <header>
        <h1>Contact</h1>
        <h2>Vous êtes intéressé par «Boostez», par une conférence ou un atelier ?</h2>
    </header>
    <article>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
        {{ message|trans({}, "messages", locale) }}
        </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
        <div class="alert alert-error">
        {{ message|trans({}, "messages", locale) }}
        </div>
        {% endfor %}
        {{ form_start(contactForm) }}
        {{ form_errors(contactForm) }}
        <section>
            <div>
                {{ form_row(contactForm.firstname) }}
                {{ form_row(contactForm.lastname) }}
                {{ form_row(contactForm.company) }}
            </div>
            <div class="rForm">
                {{ form_row(contactForm.phoneNumber) }}
                {{ form_row(contactForm.email) }}
            </div>
        </section>
        <div class="formText">
            {{ form_row(contactForm.message) }}
        </div>
        {{ form_row(contactForm.submit) }}
        {{ form_end(contactForm) }}
    </article>
    <footer>
        <section>
            <p>Nos bureaux</p>
            <h1>Société Anne Ev.</h1>
            <h2>304 Chaussée de Bruxelles 1000 Belgique</h2>
            <h3>+32 475 784 322</h3>
            <h4>anneeverard@info.com</h4>

        </section>
        <figure><img src="{{ asset('img/phoneWithArms.png') }}" alt="phone-with-arms-doing-tasks"></figure>
    </footer>
</section>




