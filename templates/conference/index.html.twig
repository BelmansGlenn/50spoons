{% extends 'base.html.twig' %}

{% block title %}Conférences{% endblock %}
{% block importCss %}
    <link rel="stylesheet" href="{{ asset('css/conference.css') }}">
{% endblock %}
{% block body %}

<section class="conferences">
    <section class="confEntreprise">
        <header>
            <div>
                <h1 class="red">Pour les entreprises</h1>
                <h2>Découvrez nos conférences et nos ateliers</h2>
            </div>
            <figure><img src="{{ asset('img/cerveau1.gif') }}" alt="illustration-helicopter-taking-flight"></figure>
        </header>
        <article>
            <h1>Conférences</h1>
            <section>
                {% if businessConf is empty %}
                    <h3>Aucunes conférences n'est disponible pour le moment.</h3>
                {% endif %}
                {% for conf in businessConf %}
                    <a href="{{ path('app_business_conference', {'slug': conf.slug}) }}" class="bgRed">{{ conf.name }}</a>
                {% endfor %}
            </section>
            <h2>Ateliers</h2>
            <section>
                {% if businessWorkshop is empty %}
                    <h3>Aucun ateliers n'est disponible pour le moment.</h3>
                {% endif %}
                {% for conf in businessWorkshop %}
                    <a href="{{ path('app_business_workshop', {'slug': conf.slug}) }}" class="bgRed">{{ conf.name }}</a>
                {% endfor %}
            </section>
        </article>
    </section>
    <section class="confEntreprise">
        <header>
            <div>
                <h1 class="blue">Pour les particuliers</h1>
                <h2>Découvrez nos ateliers et retraites</h2>
            </div>
            <figure><img src="{{ asset('img/cerveau.gif') }}" alt="illustration-helicopter-taking-flight"></figure>
        </header>
        <article>
            <h1>Ateliers</h1>
            <section>
                {% if privateWorkshop is empty %}
                    <h3>Aucun ateliers n'est disponible pour le moment.</h3>
                {% endif %}
                {% for conf in privateWorkshop %}
                    <a href="{{ path('app_private_workshop', {'slug': conf.slug }) }}" class="bgBlue">{{ conf.name }}</a>
                {% endfor %}
            </section>
            <h2>Retraites</h2>
            <section>
                {% if privateRetreat is empty %}
                    <h3>Aucune retraite n'est disponible pour le moment.</h3>
                {% endif %}
                {% for conf in privateRetreat %}
                    <a href="{{ path('app_private_retreat', {'slug': conf.slug })  }}" class="bgBlue">{{ conf.name }}</a>
                {% endfor %}
            </section>
        </article>
    </section>
    <button>
        <a href="{{ path('app_conference_speakers') }}">Nos conférenciers</a>
    </button>
</section>

<section class="clientOpinion">
    {% for avis in review %}
        <div>
            <h1>{{avis.firstname}} {{avis.lastname}}</h1>
            {% if avis.company is defined and avis.company is not null %}
            <h2>{{ avis.company }}</h2>
            {% endif %}
            <p><span>"</span>{{avis.review}}<span>"</span></p>
        </div>
    {% endfor %}
</section>




    {% include 'partials/newsletter.html.twig' %}

{% endblock %}
