{% extends 'base.html.twig' %}
{% block title %}Conférenciers{% endblock %}
{% block importCss %}
    <link rel="stylesheet" href="{{ asset('css/speakers.css') }}">
{% endblock %}
{% block body %}
<section class="conferencier">
    <header>
        <div>
            <h1>Nos conférenciers</h1>
            <h2>Découvrez nos conférenciers et leurs conférences.</h2>
        </div>
    </header>
    <article>
        {% for speaker in speakers %}
        <section>
            <figure><a href="{{ path('app_conference_speaker', {'id': speaker.id}) }}"><img src="{{ asset('uploads/images/speakers/') }}/{{ speaker.image }}" alt="conferencier-{{speaker.firstname}}{{speaker.lastname}}-portrait"></a></figure>
            <h1>{{speaker.firstname}} {{speaker.lastname}}</h1>
            <p>{{ speaker.status }}</p>
            <a class ="linkSpeaker" href="{{ path('app_conference_speaker', {'id': speaker.id}) }}">Découvrir</a>
        </section>
        {% endfor %}
    </article>
</section>
{% endblock %}


