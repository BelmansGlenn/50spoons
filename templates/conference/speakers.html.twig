{% extends 'base.html.twig' %}
{% block title %}Conférenciers{% endblock %}
{% block importCss %}
    <link rel="stylesheet" href="{{ asset('css/conference.css') }}">
{% endblock %}
{% block body %}
<section class="conferencier">
    <header>
        <div>
            <h1>Nos conférenciers</h1>
            <h2>Découvrez nos conférenciers et leurs conférences.</h2>
        </div>
        <figure><img src="{{ asset('img/cerveau.gif') }}" alt="illustration-helicopter-taking-flight"></figure>
    </header>
    <article>
        {# {% for speaker in speakers %}
        <div>
            <figure><img src="{{ asset('img/anne-portrait.jpg') }}" alt="conferencier-blabla-portrait"></figure>
            <h1>{{speaker.firstname}}{{speaker.lastname}}</h1>
